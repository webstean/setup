        EnvironmentVariables:
          Enabled: true
          LaunchAdministrator: false
        Hosts:
          Enabled: true
          ShowStartupWarning: false
        ImageResizer:
          Enabled: true
          ImageresizerReplace: true
        KeyboardManager:
          Enabled: false
        LightSwitch:
          Enabled: false
        MouseJump:
          Enabled: false
